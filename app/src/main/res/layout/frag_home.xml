<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--顶部导航-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_portrait"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/ic_48dp_padding"
            android:src="@drawable/default_artist_login_mini"/>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/sliding_tabs"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:elevation="@dimen/app_bar_toolbar"
            app:tl_tab_space_equal="true"
            app:tl_textUnselectColor="@color/black"
            app:tl_textSelectColor="@color/colorAccent"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/iv_find"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/ic_48dp_padding"
            android:src="@drawable/navigation_bar_btn_search"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"/>

    <!--页面主要内容-->
    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!--底部播放器-->
    <LinearLayout
        android:id="@+id/ll_player"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/backgroundDark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cover"
            style="@style/ic_60dp_no_padding"
            android:src="@color/white"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_15_white"
                android:text="@string/no_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_12_sec"
                android:text="@string/unknown"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_play"
            style="@style/ic_24dp_no_padding"
            android:src="@drawable/player_btn_radio_play_press"/>

        <ImageView
            android:id="@+id/iv_next"
            style="@style/ic_24dp_no_padding"
            android:layout_marginStart="@dimen/player_bar_margin"
            android:layout_marginEnd="@dimen/player_bar_margin"
            android:src="@drawable/player_btn_next_select" />

    </LinearLayout>

</LinearLayout>