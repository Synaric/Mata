<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="common_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/common_item_padding</item>
        <item name="android:layout_marginBottom">@dimen/common_item_margin_bottom</item>
    </style>

    <style name="ic_24dp_no_padding">
        <item name="android:layout_width">@dimen/ic_24dp</item>
        <item name="android:layout_height">@dimen/ic_24dp</item>
    </style>

    <style name="ic_36x60dp_p6x18">
        <item name="android:layout_width">@dimen/ic_36dp</item>
        <item name="android:layout_height">@dimen/ic_60dp</item>
        <item name="android:paddingLeft">@dimen/ic_36dp_padding</item>
        <item name="android:paddingRight">@dimen/ic_36dp_padding</item>
        <item name="android:paddingTop">@dimen/ic_60dp_padding</item>
        <item name="android:paddingBottom">@dimen/ic_60dp_padding</item>
    </style>

    <style name="ic_48dp_no_padding">
        <item name="android:layout_width">@dimen/ic_48dp</item>
        <item name="android:layout_height">@dimen/ic_48dp</item>
    </style>

    <style name="ic_48dp" parent="ic_48dp_no_padding">
        <item name="android:padding">@dimen/ic_48dp_padding</item>
    </style>

    <style name="ic_60dp_no_padding">
        <item name="android:layout_width">@dimen/ic_60dp</item>
        <item name="android:layout_height">@dimen/ic_60dp</item>
    </style>

    <style name="text_15_white">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_13_pri">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="text_13_acc">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_12_sec">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondText</item>
    </style>

    <style name="btn_border" parent="text_13_acc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:background">@drawable/bg_white_border</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>
</resources>
