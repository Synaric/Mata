<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义组件的attr遵循驼峰命名，改进组件的attr遵循下划线命名-->

    <declare-styleable name="CompoundRecyclerView">
        <attr name="crv_empty_view" format="reference"/>
        <attr name="crv_error_view" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AlphabetIndexView">
        <attr name="aiv_text_color" format="color"/>
        <attr name="aiv_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SlideUpLayout">
        <attr name="handle" format="reference"/>
        <attr name="content" format="reference"/>
        <attr name="topOffset" format="dimension"/>
        <attr name="handleWidthOffset" format="dimension"/>
    </declare-styleable>

</resources>